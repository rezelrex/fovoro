<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="270dp"
    android:layout_height="match_parent"
    android:background="@drawable/fovoromain">

    <TextView
        android:id="@+id/menutext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font1"
        android:text="Menu"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/to_weekly_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:fontFamily="@font/font1"
        android:text="Weekly Review"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="italic"
        android:layout_marginTop="20dp"
        android:layout_below="@id/menutext"/>

    <Button
        android:id="@+id/to_food_stalls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/to_weekly_review"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:fontFamily="@font/font1"
        android:text="Food Stalls"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/to_my_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/to_food_stalls"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:fontFamily="@font/font1"
        android:text="My Profile"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/to_submit_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/to_my_profile"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:fontFamily="@font/font1"
        android:text="Submit Review"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="italic" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/logOut"
        android:hint="Log Out"
        android:fontFamily="@font/font1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="196dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_exit" />

    <TextView
        android:id="@+id/logOutDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/to_food_stalls"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="367dp"
        android:layout_marginBottom="111dp"
        android:fontFamily="@font/font1"
        android:text="Log Out"
        android:textSize="20dp" />

</RelativeLayout>